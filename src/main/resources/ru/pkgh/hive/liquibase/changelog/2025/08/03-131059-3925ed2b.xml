<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="hive">
        <createTable remarks="Возможность пользователю пометить проступок флагом." tableName="HIVE_FLAGGED_MISDEMEANOR">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HIVE_FLAGGED_MISDEMEANOR"/>
            </column>
            <column name="COMMENT_" type="CLOB"/>
            <column name="CREATED_AT" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="EMPLOYEE_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="MISDEMEANOR_ID"
                    remarks="Теоретически, несколько сотрудников могут пометить флагом проступок. Поэтому many-to-one."
                    type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="hive">
        <createTable tableName="HIVE_REJECTION_OF_PROMISE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HIVE_REJECTION_OF_PROMISE"/>
            </column>
            <column name="PROMISE_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="EMPLOYEE_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="hive">
        <addColumn tableName="HIVE_MERCY">
            <column name="COMMENT_" type="CLOB"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="hive">
        <addColumn tableName="HIVE_PROMISE">
            <column name="MISDEMEANOR_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="MISDEMEANOR_ID" tableName="HIVE_PROMISE"/>
    </changeSet>
    <changeSet id="5" author="hive">
        <addColumn tableName="HIVE_STATEMENT_OF_EXPLANATION">
            <column name="MISDEMEANOR_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="MISDEMEANOR_ID" tableName="HIVE_STATEMENT_OF_EXPLANATION"/>
    </changeSet>
    <changeSet id="6" author="hive">
        <createIndex indexName="IDX_HIVE_FLAGGED_MISDEMEANOR_EMPLOYEE" tableName="HIVE_FLAGGED_MISDEMEANOR">
            <column name="EMPLOYEE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_ID" baseTableName="HIVE_FLAGGED_MISDEMEANOR"
                                 constraintName="FK_HIVE_FLAGGED_MISDEMEANOR_ON_EMPLOYEE" referencedColumnNames="ID"
                                 referencedTableName="HIVE_USER"/>
    </changeSet>
    <changeSet id="7" author="hive">
        <createIndex indexName="IDX_HIVE_FLAGGED_MISDEMEANOR_MISDEMEANOR" tableName="HIVE_FLAGGED_MISDEMEANOR">
            <column name="MISDEMEANOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="MISDEMEANOR_ID" baseTableName="HIVE_FLAGGED_MISDEMEANOR"
                                 constraintName="FK_HIVE_FLAGGED_MISDEMEANOR_ON_MISDEMEANOR" referencedColumnNames="ID"
                                 referencedTableName="HIVE_MISDEMEANOR"/>
    </changeSet>
    <changeSet id="8" author="hive">
        <createIndex indexName="IDX_HIVE_PROMISE_MISDEMEANOR" tableName="HIVE_PROMISE">
            <column name="MISDEMEANOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="MISDEMEANOR_ID" baseTableName="HIVE_PROMISE"
                                 constraintName="FK_HIVE_PROMISE_ON_MISDEMEANOR" referencedColumnNames="ID"
                                 referencedTableName="HIVE_MISDEMEANOR"/>
    </changeSet>
    <changeSet id="9" author="hive">
        <createIndex indexName="IDX_HIVE_REJECTION_OF_PROMISE_EMPLOYEE" tableName="HIVE_REJECTION_OF_PROMISE">
            <column name="EMPLOYEE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_ID" baseTableName="HIVE_REJECTION_OF_PROMISE"
                                 constraintName="FK_HIVE_REJECTION_OF_PROMISE_ON_EMPLOYEE" referencedColumnNames="ID"
                                 referencedTableName="HIVE_USER"/>
    </changeSet>
    <changeSet id="10" author="hive">
        <createIndex indexName="IDX_HIVE_REJECTION_OF_PROMISE_PROMISE" tableName="HIVE_REJECTION_OF_PROMISE">
            <column name="PROMISE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PROMISE_ID" baseTableName="HIVE_REJECTION_OF_PROMISE"
                                 constraintName="FK_HIVE_REJECTION_OF_PROMISE_ON_PROMISE" referencedColumnNames="ID"
                                 referencedTableName="HIVE_PROMISE"/>
    </changeSet>
    <changeSet id="11" author="hive">
        <createIndex indexName="IDX_HIVE_STATEMENT_OF_EXPLANATION_MISDEMEANOR"
                     tableName="HIVE_STATEMENT_OF_EXPLANATION">
            <column name="MISDEMEANOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="MISDEMEANOR_ID" baseTableName="HIVE_STATEMENT_OF_EXPLANATION"
                                 constraintName="FK_HIVE_STATEMENT_OF_EXPLANATION_ON_MISDEMEANOR"
                                 referencedColumnNames="ID" referencedTableName="HIVE_MISDEMEANOR"/>
    </changeSet>
    <changeSet id="12" author="hive">
        <dropColumn columnName="flag" tableName="hive_misdemeanor"/>
    </changeSet>
    <changeSet id="13" author="hive">
        <setColumnRemarks columnDataType="clob" columnName="COMMENT_" remarks="Комментарий."
                          tableName="HIVE_MISDEMEANOR"/>
    </changeSet>
    <changeSet id="14" author="hive">
        <setColumnRemarks columnDataType="clob" columnName="COMMENT_" remarks="Комментарий."
                          tableName="HIVE_TYPE_OF_MISDEMEANOR"/>
    </changeSet>
    <changeSet id="15" author="hive">
        <setColumnRemarks columnDataType="datetime" columnName="CREATED_AT" remarks="Время создания записи."
                          tableName="HIVE_MISDEMEANOR"/>
    </changeSet>
    <changeSet id="16" author="hive">
        <setColumnRemarks columnDataType="varchar(255)" columnName="REACTION"
                          remarks="Реакция на проступок (по умолчанию).&#10;При рецидиве будет уже не реакция по умолчанию, а выговор."
                          tableName="HIVE_TYPE_OF_MISDEMEANOR"/>
    </changeSet>
</databaseChangeLog>