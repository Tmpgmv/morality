<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://studyGroupListView.title"
      focusComponent="studyGroupsDataGrid">
    <data>
        <collection id="studyGroupsDc"
                    class="ru.pkgh.hive.entity.student.StudyGroup">
            <fetchPlan extends="_base">
                <property name="department" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="studyGroupsDl" readOnly="true">
                <query>
                    <![CDATA[select e from hive_StudyGroup e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="studyGroupsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="studyGroupsDataGrid.createAction"/>
            <button id="editButton" action="studyGroupsDataGrid.editAction"/>
            <button id="removeButton" action="studyGroupsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="studyGroupsDl"/>
        </hbox>
        <dataGrid id="studyGroupsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="studyGroupsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="department"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
