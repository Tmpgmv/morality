<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://acceptanceOfPromiseDetailView.title"
      focusComponent="form">
    <data>
        <instance id="acceptanceOfPromiseDc"
                  class="ru.pkgh.hive.entity.promise.AcceptanceOfPromise">
            <fetchPlan extends="_base">
                <property name="employee" fetchPlan="_base"/>
                <property name="promise" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="acceptanceOfPromiseDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="acceptanceOfPromiseDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <dateTimePicker id="createdAtField" property="createdAt" readOnly="true"/>
            <entityPicker id="employeeField" property="employee">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <entityPicker id="promiseField" property="promise">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="commentField" height="9.5em" property="comment"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
