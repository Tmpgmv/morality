<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://promiseListView.title"
      focusComponent="promisesDataGrid">
    <data>
        <collection id="promisesDc"
                    class="ru.pkgh.hive.entity.promise.Promise">
            <fetchPlan extends="_instance_name">
                <property name="createdAt"/>
                <property name="misdemeanor" fetchPlan="_base"/>
                <property name="student" fetchPlan="_base">
                    <property name="user">
                        <property name="username"/>
                        <property name="firstName"/>
                        <property name="lastName"/>
                    </property>
                </property>
                <property name="collegeReacted"/>
            </fetchPlan>
            <loader id="promisesDl" readOnly="true">
                <query>
                    <![CDATA[select e from hive_Promise e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="promisesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="promisesDataGrid.createAction"/>
            <button id="editButton" action="promisesDataGrid.editAction"/>
            <button id="removeButton" action="promisesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="promisesDl"/>
        </hbox>
        <dataGrid id="promisesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="promisesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="createdAt"/>
                <column property="misdemeanor"/>
                <column property="student"/>
                <column property="collegeReacted"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
