<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://misdemeanorDetailView.title"
      focusComponent="form">
    <data>
        <instance id="misdemeanorDc"
                  class="ru.pkgh.hive.entity.misdemeanor.Misdemeanor">
            <fetchPlan extends="_base">
                <property name="type" fetchPlan="_base"/>
                <property name="referrer" fetchPlan="_base"/>
                <property name="student" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="misdemeanorDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="misdemeanorDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <checkbox id="collegeReactedField" property="collegeReacted"/>
            <checkbox id="studentReactedField" property="studentReacted"/>
            <fileStorageUploadField id="fileField" clearButtonVisible="true" fileNameVisible="true" property="file"/>
            <entityPicker id="typeField" property="type">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="caseSummaryField" height="9.5em" property="caseSummary"/>
            <entityPicker id="referrerField" property="referrer">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <dateTimePicker id="createdAtField" property="createdAt" readOnly="true"/>
            <entityPicker id="studentField" property="student">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="commentField" height="9.5em" property="comment"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
